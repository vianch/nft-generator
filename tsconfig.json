{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es7", "es2017", "es2018", "dom"],
    "rootDirs": ["src"],
    "baseUrl": "src",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "typeRoots": ["./src/types/", "node_modules/@types"],
    "types": ["node"],
    "isolatedModules": true,
    "sourceMap": true,
    "incremental": true
  },
  "include": ["src/types/**/*", "src/index.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
